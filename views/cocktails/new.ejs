<% layout('layouts/boilerplate') %>

<h1>Create a new Cocktail Entry</h1>

<form class="cocktail-form" action="/cocktails" method="POST">
    <div class="label-input-pair">
        <label for="title">Title</label>
        <input type="text" name="cocktail[title]" id="title" required>
    </div>
    <div class="label-input-pair">
        <label for="description">Description</label>
        <textarea name="cocktail[description]" id="description" required></textarea>
    </div>
    <div class="label-input-pair">
        <label for="price">Price</label>
        <input type="number" name="cocktail[price]" id="price">
    </div>
    <div class="ingredients-wrapper">
        <h2>Ingredients</h2>
        <ul>
            <li>
                <label for="ing1">Ingredient 1</label>
                <input type="text" name="cocktail[ing1]" id="ing1">
            </li>
            <li>
                <label for="ing2">Ingredient 2</label>
                <input type="text" name="cocktail[ing2]" id="ing2">
            </li>
            <li>
                <label for="ing3">Ingredient 3</label>
                <input type="text" name="cocktail[ing3]" id="ing3">
            </li>
            <li>
                <label for="ing4">Ingredient 4</label>
                <input type="text" name="cocktail[ing4]" id="ing4">
            </li>
            <li>
                <label for="ing5">Ingredient 5</label>
                <input type="text" name="cocktail[ing5]" id="ing5">
            </li>
            <li>
                <label for="ing6">Ingredient 6</label>
                <input type="text" name="cocktail[ing6]" id="ing6">
            </li>
            <li>
                <label for="ing7">Ingredient 7</label>
                <input type="text" name="cocktail[ing7]" id="ing7">
            </li>
            <li>
                <label for="ing8">Ingredient 8</label>
                <input type="text" name="cocktail[ing8]" id="ing8">
            </li>
            <li>
                <label for="ing9">Ingredient 9</label>
                <input type="text" name="cocktail[ing9]" id="ing8">
            </li>
            <li>
                <label for="ing10">Ingredient 10</label>
                <input type="text" name="cocktail[ing10]" id="ing10">
            </li>
        </ul>
    
    </div>
    <div class="label-input-pair">
        <label for="instructions">Instructions</label>
        <textarea name="cocktail[instructions]" id="instructions" required></textarea>
    </div>
    <div class="label-input-pair">
        <label for="glass">Glass</label>
        <input type="text" name="cocktail[glass]" id="glass" required>
    </div>
    <div class="label-input-pair">
        <label for="garnish">Garnish</label>
        <input type="text" name="cocktail[garnish]" id="garnish" required>
    </div>
    <div class="label-input-pair">
        <label for="image">Image URL</label>
        <input type="text" name="cocktail[image]" id="image" required>
    </div>
    <button>Add Cocktail</button>
</form>

<footer><a href="/cocktails">Go back to Cocktails</a></footer>